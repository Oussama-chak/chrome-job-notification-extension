{
  "manifest_version": 3,
  "name": "Job Notification Extension",
  "version": "1.0",
  "description": "Receive notifications about the latest job offers that match your profile.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "webNavigation"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.indeed.com/*"],  
      "js": ["src/content/content.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/icon.png"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
}
